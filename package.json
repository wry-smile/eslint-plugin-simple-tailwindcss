{
  "name": "@wry-smile/eslint-plugin-simple-tailwindcss",
  "version": "0.2.0",
  "description": "ESLint plugin that keeps Tailwind CSS class usage consistent across Vue, JSX, and utility helpers.",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public",
    "tag": "beta"
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --clean",
    "test": "vitest run",
    "lint": "eslint . --ext .ts"
  },
  "keywords": [
    "eslint",
    "eslintplugin",
    "tailwindcss",
    "sorting",
    "clsx",
    "cva"
  ],
  "author": "@wry-smile",
  "repository": {
    "type": "git",
    "url": "https://github.com/wry-smile/eslint-plugin-simple-tailwindcss"
  },
  "license": "MIT",
  "peerDependencies": {
    "eslint": "^8.57.0 || ^9.0.0"
  },
  "dependencies": {
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@typescript-eslint/parser": "^8.46.4",
    "@typescript-eslint/utils": "^8.46.4",
    "eslint": "^9.39.1",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.9",
    "vue-eslint-parser": "^10.2.0"
  }
}
